blueprint:
  name: Cycle Scenes with Input Button
  description: Cycle through multiple scenes when an input_button helper is pressed.
  domain: automation
  input:
    button:
      name: Input Button Helper Entity
      description: The input_button helper that will trigger the scene cycling. If not present, it will be created.
      selector:
        entity:
          domain: input_button
    scenes:
      name: Scenes
      description: List of scenes to cycle through. Supports any number of scenes.
      selector:
        entity:
          domain: scene
          multiple: true
    scene_index:
      name: Scene Index Helper
      description: Input number to keep track of the current scene.
      selector:
        entity:
          domain: input_number

trigger:
  - platform: state
    entity_id: !input button
    to: "pressed"

action:
  - variables:
      current_index: "{{ states(input.scene_index) | int }}"
      scenes_list: "{{ input.scenes | list }}"
      total_scenes: "{{ scenes_list | length }}"
      next_index: "{{ (current_index + 1) % total_scenes }}"
  
  - service: scene.turn_on
    target:
      entity_id: "{{ scenes_list[next_index] }}"

  - service: input_number.set_value
    target:
      entity_id: "{{ input.scene_index }}"
    data:
      value: "{{ next_index }}"

mode: restart
