blueprint:
  name: Cycle Scenes with Button
  description: Cycle through multiple scenes when a button helper is pressed.
  domain: automation
  input:
    button:
      name: Button Helper Entity
      description: The button helper that will trigger the scene cycling. If not present, it will be created.
      selector:
        entity:
          domain: input_button
    scenes:
      name: Scenes
      description: List of scenes to cycle through. Supports any number of scenes.
      selector:
        entity:
          domain: scene
          multiple: true
    scene_index:
      name: Scene Index Helper
      description: Input number to keep track of the current scene.
      selector:
        entity:
          domain: input_number

trigger:
  - platform: event
    event_type: call_service
    event_data:
      domain: input_button
      service: press
      service_data:
        entity_id: !input button

action:
  - service: input_button.create
    data:
      name: "Scene Cycle Button"
      entity_id: input_button.scene_cycle_button
    condition: "{{ states('input_button.scene_cycle_button') == 'unknown' }}"

  - variables:
      current_index: "{{ states(input.scene_index) | int }}"
      scenes_list: "{{ input.scenes | list }}"
      total_scenes: "{{ scenes_list | length }}"
      next_index: "{{ (current_index + 1) % total_scenes }}"
  
  - service: scene.turn_on
    target:
      entity_id: "{{ scenes_list[next_index] }}"

  - service: input_number.set_value
    target:
      entity_id: "{{ input.scene_index }}"
    data:
      value: "{{ next_index }}"

mode: restart
